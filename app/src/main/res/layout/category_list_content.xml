<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    card_view:cardMaxElevation="@dimen/card_max_elevation"
    card_view:cardElevation="@dimen/card_elevation"
    card_view:cardBackgroundColor="@color/colorPrimaryDark"
    card_view:cardUseCompatPadding="true"
    card_view:cardPreventCornerOverlap="false">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView android:id="@+id/category_list_tv"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            tools:text="@string/physics"
            android:layout_height="wrap_content" />

        <!--Images to display the categories.-->
        <ImageView android:id="@+id/category_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            tools:src="@drawable/ic_stat_name"
            android:contentDescription="@string/quiz_categories_description" />

    </LinearLayout>

</androidx.cardview.widget.CardView>

