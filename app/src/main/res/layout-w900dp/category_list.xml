<?xml version="1.0" encoding="utf-8"?>
<androidx.recyclerview.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:name="com.ajsherrell.hyperbaricquiz.CategoryListActivity"
    android:layout_marginLeft="@dimen/rv_margin"
    android:layout_marginRight="@dimen/rv_margin"
    android:id="@+id/image_rv"
    tools:context=".CategoryListActivity">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/card_corner_radius"
        card_view:cardMaxElevation="@dimen/card_max_elevation"
        card_view:cardElevation="@dimen/card_elevation"
        card_view:cardBackgroundColor="@color/colorPrimaryDark"
        card_view:cardUseCompatPadding="true"
        card_view:cardPreventCornerOverlap="false"
        tools:context=".CategoryListActivity">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView android:id="@+id/category_list_tv"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                tools:text="@string/physics"
                android:layout_height="0dp" />

            <!--Images to display the categories.-->
            <ImageView android:id="@+id/category_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                tools:src="@drawable/ic_stat_name"
                android:contentDescription="@string/quiz_categories_description" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <FrameLayout
        android:id="@+id/question_detail_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3" />

</androidx.recyclerview.widget.RecyclerView>